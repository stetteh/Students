@model Students.Models.User

@{
    ViewBag.Title = "Hello";
}

<h2>Hello @ViewBag.Name. Enter Cookie Name</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new {@class = "form-control", placeholder = "Cookie Name"})
        @Html.ValidationMessageFor(x=>x.Name, "", new { @class="text-danger"})
    </div>

    <p>
        <button type="submit" class="btn btn-primary btn-lg" value="Create">Create Cookie</button>
    </p>
}

@section scripts{
  @Scripts.Render("~/bundles/jqueryval")   
}
